<h1>過去問道場</h1>
<%= link_to "年度別に問題を解く", categorize1_question_path %>
<%= link_to "分野別に問題を解く", categorize2_question_path %>
<% @questions.each do |question| %>
  <h3>甲</h1>
    <% if question.exam.kou? && question.exam.category_id == 1 %>
      <%= link_to "法令", show_category_question_path(question.id) %>
    <% end %>
    <br>
    <% if question.exam.kou? && question.exam.category_id == 2 %>
      <%= link_to "基礎", show_category_question_path(question.id) %>
    <% end %>
    <br>
    <% if question.exam.kou? && question.exam.category_id == 3 %>
      <%= link_to "ガス機器", show_category_question_path(question.id) %>
    <% end %>
  <h3>乙</h1>
    <% if question.exam.otsu? && question.exam.category_id == 1 %>
      <%= link_to "法令", show_category_question_path(question.id) %>
    <% end %>
    <br>
    <% if question.exam.otsu? && question.exam.category_id == 2 %>
      <%= link_to "基礎", show_category_question_path(question.id) %>
    <% end %>
    <br>
    <% if question.exam.otsu? && question.exam.category_id == 3 %>
      <%= link_to "ガス機器", show_category_question_path(question.id) %>
    <% end %>
<% end %>