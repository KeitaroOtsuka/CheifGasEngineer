<h1>グループ一覧ページ</h1>
<% unless current_user.groups.present? %>
  <%= link_to "グループ作成", new_group_path %>
<% end %>
<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @groups.present? %>
          <div class='col-md-8 offset-md-1'>
            <h2>Groups</h2>
              <table class='table table-hover table-inverse'>
                <thead>
                <tr>
                  <th></th>
                  <th>グループ名</th>
                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                  <% @groups.each do |group| %>
                  <tr>
                  <td><%= link_to group.name, group_path(group) %></td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p>NO RESULT</p>
        <% end %>
      </div>
    </div>
  </div>
</div>