<div class='col-md-8 offset-md-1'>
  <h2>Groups</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>