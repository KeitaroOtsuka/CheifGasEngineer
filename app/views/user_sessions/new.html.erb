<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class="text-center text-4xl"><%= t '.title' %></h1>
      <br>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions pt-3">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <br>
      <div class='text-center'>
        <%= link_to (t '.to_register_page'), new_user_path, class: "px-2 border-solid border-bottom" %>
        <%# link_to t('.password_forget'), new_password_reset_path, class: "px-2 border-solid border-bottom" %>
      </div>
    </div>
  </div>
</div>